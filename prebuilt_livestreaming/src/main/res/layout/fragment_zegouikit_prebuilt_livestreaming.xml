<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/img_bg">

  <com.zegocloud.uikit.components.audiovideo.ZegoAudioVideoView
    android:id="@+id/host_video_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />

  <TextView
    android:id="@+id/no_host_hint"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:maxWidth="165dp"
    android:text="@string/no_host"
    android:textColor="@android:color/white"
    android:textSize="16sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_marginTop="10dp"
    app:layout_constraintTop_toTopOf="parent">

    <com.zegocloud.uikit.prebuilt.livestreaming.internal.ZegoExitLiveButton
      android:id="@+id/exit_live"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:layout_alignParentEnd="true"
      android:layout_centerVertical="true"
      android:layout_marginEnd="10dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

    <com.zegocloud.uikit.prebuilt.livestreaming.ZegoMemberButton
      android:id="@+id/member_count"
      android:layout_width="53dp"
      android:layout_height="28dp"
      android:layout_centerVertical="true"
      android:layout_toStartOf="@id/exit_live"
      android:background="@drawable/list_people_round_rect"
      android:drawableStart="@drawable/list_people"
      android:drawablePadding="2dp"
      android:gravity="center_vertical"
      android:paddingStart="12dp"
      android:paddingEnd="12dp"
      android:textColor="@android:color/white"
      android:textSize="12sp" />
  </RelativeLayout>

  <com.zegocloud.uikit.components.live.ZegoInRoomMessageView
    android:id="@+id/message_view"
    android:layout_width="270dp"
    android:layout_height="200dp"
    android:layout_marginEnd="90dp"
    app:layout_constraintBottom_toTopOf="@+id/bottom_menu_bar"
    app:layout_constraintStart_toStartOf="parent" />

  <com.zegocloud.uikit.prebuilt.livestreaming.internal.BottomMenuBar
    android:id="@+id/bottom_menu_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>